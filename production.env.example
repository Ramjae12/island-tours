# Production Environment Configuration Template
# Copy this to your cPanel hosting and rename to .env

APP_NAME="Island Tours"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_FROM_LOCAL_ENV
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://yourdomain.com

# Database Configuration (Get from cPanel â†’ MySQL Databases)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_cpanel_database_name
DB_USERNAME=your_cpanel_db_username
DB_PASSWORD=your_cpanel_db_password

# Email Configuration (Use your hosting provider's SMTP)
MAIL_MAILER=smtp
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="Island Tours"

# Cache Configuration (File-based for shared hosting)
CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=database

# Security
BCRYPT_ROUNDS=12

# Laravel Configuration
LOG_CHANNEL=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Disable Broadcasting (not needed for this app)
BROADCAST_CONNECTION=null

# File Storage
FILESYSTEM_DISK=local

# Additional Security Headers
SECURE_HEADERS=true
